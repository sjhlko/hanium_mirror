{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "ignorePatterns": ["node_modules/"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "parser": "flow", "endOfLine": "auto" }
    ],
    "no-console": "off",
    "no-unused-vars": "warn"
  }
}
